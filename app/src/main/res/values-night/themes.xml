<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MIERS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/miers_gray</item>
        <item name="colorPrimaryVariant">@color/miers_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/meirs_light_pink</item>
        <item name="colorSecondaryVariant">@color/meirs_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MIERS.Account" parent="Theme.MIERS">
        <item name="android:statusBarColor">@color/meirs_pink</item>
    </style>

    <style name="Theme.MIERS.Actionbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/miers_gray</item>
        <item name="colorPrimaryVariant">@color/miers_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/meirs_light_pink</item>
        <item name="colorSecondaryVariant">@color/meirs_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/miers_gray</item>
        <!-- Customize your theme here. -->
    </style>
</resources>